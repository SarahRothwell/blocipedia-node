<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

    <h1>Create a new wiki</h1>

    <form action="/wikis/create" method="post">
      <div class="form-group">
        <label for="title">Wiki Title</label>
         <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
      </div>
      <div class="form-group">
          <label for="body">Body</label>
          <textarea rows="4" class="form-control" name="body" placeholder="Enter Body"></textarea>
      </div>
      <% if(currentUser && currentUser.role == 2) { %>
        <div class="form-group">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="private" value ="true">
            <label class="form-check-label" for="private">Make my wiki private</label>
          </div>
        </div>
      <% } %>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
