<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>

    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <% include ../static/partials/messages.ejs %>

      <div>
        <h4>Wiki Collaborators</h4>
        <ul class="list-group">
          <% wiki.collaborators.forEach((collaborator) => { %>
            <li class="list-group-item">
              <%= collaborator.User.email %>
            </li>
          <% }) %>
        </ul>
      </div>
        <% if((currentUser.id == wiki.userId) || currentUser.role == 1) { %>
        <div>
          <form action="/wikis/<%=wiki.id %>/addCollaborator" method="post">
              <input type="text" placeholder="Enter user email..." name="email">
              <button type="submit"><i class="fa fa-search"></i>Add Collaborator</button>
          </form>
        </div>
        <div>
          <form action="/wikis/<%=wiki.id %>/removeCollaborator" method="post">
              <input type="text" placeholder="Enter user email..." name="email">
              <button type="submit"><i class="fa fa-search"></i>Remove Collaborator</button>
          </form>
        </div>
        <% } %>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
